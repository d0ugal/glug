{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
  ],
  automerge: true,
  packageRules: [
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
    },
    {
      matchDepTypes: [
        'devDependencies',
      ],
      automerge: true,
    },
    {
      matchManagers: [
        'gomod',
      ],
      matchDepTypes: [
        'indirect',
      ],
      enabled: true,
    },
    {
      matchManagers: [
        'gomod',
      ],
      postUpdateOptions: [
        'gomodTidy',
      ],
    },
    {
      matchManagers: [
        'gomod',
      ],
      commitMessagePrefix: 'fix:',
      commitMessageAction: 'update',
    },
    {
      matchPackageNames: [
        'golang.org/x/sys',
      ],
      allowedVersions: '<=0.30.0',
      description: 'Limit golang.org/x/sys to versions compatible with Go 1.21',
    },
    {
      matchPackageNames: [
        'go',
      ],
      enabled: false,
      description: 'Disable Go version updates to maintain compatibility',
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/Makefile/',
      ],
      matchStrings: [
        'GOLANGCI_LINT_VERSION := (?<currentValue>v[\\d\\.]+)',
      ],
      depNameTemplate: 'golangci/golangci-lint',
      datasourceTemplate: 'docker',
      versioningTemplate: 'semver',
    },
  ],
}
